<!DOCTYPE html>
<html>
  <head>
    <title>EverLeafApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    </head>

  <body>

  <div class="navbar">
  <header class="head">
  
  <nav class="navbar navbar-light bg-light">
  <%= form_tag(tasks_path, method: :get) do %>
    <%= text_field_tag :term, params[:term] %>
    <%= submit_tag 'Search', name: nil %>
    
  <% end %>
  
</nav>

<div  class="btn btn-outline-success",id="btnn">

<% if logged_in? %>
<p  class="btn btn-outline-success",id="btnn"><%= link_to 'user list registered', users_path %> </p>
<p  class="btn btn-outline-success",id="btnn"><%= link_to 'all tasks created', tasks_path %> </p>
<p  class="btn btn-outline-success",id="btnn"><%= link_to "Logout", session_path(current_user.id), method: :delete %></p>
<% else %>
<p  class="btn btn-outline-success",id="btnn"><%= link_to "Sign up", new_user_path %></p>
<p  class="btn btn-outline-success",id="btnn"><%= link_to "Login", new_session_path %></p>
<% end %>

</header>
</div>
<div class="body">
<%= t('view.sample') %>
 <% flash.each do |key, value| %>
         <%= content_tag(:div, value, class: "#{key}") %>
      <% end %>
    
    
    <%= yield %>
 
 
    <div class="footer">
    <h2> welcome to task management app</h2>
    </div>
  </body>
  </div>
</html>
