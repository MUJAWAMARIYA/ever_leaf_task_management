<p id="notice"><%= notice %></p>
<%= paginate @tasks %>
<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Kind of task</th>
      <th>Priority</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.content %></td>
        <td><%= task.start_date %></td>
        <td><%= task.end_date %></td>
        <td><%= task.kind_of_task %></td>
        <td><%= task.priority %></td>
        <td><%= task.status %></td>
        <td><%= task.user_id %></td>
        <td><%= link_to 'Show', task %></td>
        <% if logged_in? %>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>
<%= paginate @tasks %>
<% if logged_in? %>
<%= link_to 'New Task', new_task_path %>
<% end %>