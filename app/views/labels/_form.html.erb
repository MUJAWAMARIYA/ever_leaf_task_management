<%= form_with(model: @label, local: true) do |form| %>
    
     <div class="actions">
       <%= form.label :name %> 
       <%= form.text_field :name %> 
       <%= form.label :description %> 
       <%= form.text_field :description %>
       <%= form.hidden_field :user_id %>
       <%= form.submit %>
     </div>
   <% end %>
